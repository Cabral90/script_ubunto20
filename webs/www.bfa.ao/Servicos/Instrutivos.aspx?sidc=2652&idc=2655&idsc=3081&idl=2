<script type="text/javascript">



    $("#login-users").keypress(function (event) {
        if (event.which == 13) {
            ga('send', 'event', 'acesso ao BFA Net', 'login');
            event.preventDefault();
            window.open('', '_new').location.href = "https://www.bfanet.ao/#" + $("#login-users").val();
        }
    });

    $("#login-company").keypress(function (event) {
        if (event.which == 13) {
            ga('send', 'event', 'acesso ao BFA Net', 'login');
            event.preventDefault();
            window.open('', '_new').location.href = "https://www.bfanetempresas.ao/#" + $("#login-company").val();
        }
    });
    


    $(function () {
        var params = [
            'height=' + screen.height,
            'width=' + screen.width
        ].join(',');

        $("#submitParticulares").click(function (event) {
            ga('send', 'event', 'acesso ao BFA Net', 'login');
            event.preventDefault();
            window.open('', '_new').location.href = "https://www.bfanet.ao/#" + $("#login-users").val();
        });

        $("#submitEmpresas").click(function (event) {
            ga('send', 'event', 'acesso ao BFA Net', 'login');
            event.preventDefault();
            window.open('', '_new').location.href = "https://www.bfanetempresas.ao/#" + $("#login-company").val();
        });

    });
</script>

