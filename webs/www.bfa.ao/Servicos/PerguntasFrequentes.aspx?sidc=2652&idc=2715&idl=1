<script type="text/javascript">

    function initBody() {
        $('.drop-style').each(function () {
            var dropText = $('.drop-text').val();
            var dropSelected = $(this).find('.drop-selected');
            dropSelected.html(dropText);
        });
    }

    function initEvents() {

        $(".drop-list li").on("click", function () {
            var obj = '.drop-style';
            $(this).parents(obj).find('.drop-selected').text($(this).text());
            $('.drop-text').val($(this).text());
            $('.drop-value').val($(this).attr("id"));

            $('form#faqForm').submit();
        });
    }

    $(function () {
        initEvents();
        initBody();
    });

</script>

        
