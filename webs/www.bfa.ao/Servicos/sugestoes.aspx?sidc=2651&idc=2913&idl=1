<script type="text/javascript">
    //
    
    function validate() {
//        if (!isReCaptchaChecked()) {
//            $('.message-form').html(reCaptchaNotCheckedMessage);
//            BFA.UI.popins();

//            return false;
//        }
        
        if (!Page_ClientValidate("")) {
            sendGoogleanalitycs();      
        }
    }

    function sendGoogleanalitycs() {
        var i;
        var camposComErro = "";

        for (i = 0; i < Page_Validators.length; i++) {
            if (!Page_Validators[i].isvalid) {
                var ctrl = Page_Validators[i].controltovalidate;
                var split = ctrl.split("_");
                var field = split[split.length - 1];
                if (field != "undefined") {
                    camposComErro = camposComErro + field + ",";
                }
            }
        }

        ga('send', 'event', 'sugestão/reclamação', 'formulário submetido com erro', camposComErro);
    }

    $(document).ready(function () {
        var toShow = document.getElementById("ctl00_ctl01_successfullEmailSent");
        if (toShow.value == 'true') {
            ga('send', 'event', 'sugestão/reclamação', 'formulário submetido com sucesso');
            BFA.UI.popins();
        }
    }); 
</script>


        
